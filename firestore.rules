rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null }
    function isAdmin() { return isSignedIn() && (request.auth.token.role == 'admin') }
    function isOwner(resourceOwner) { return isSignedIn() && request.auth.uid == resourceOwner }

    match /admins/{uid} {
      allow read: if isOwner(uid) || isAdmin()
      allow write: if isAdmin()
    }

    match /leads/{id} {
      allow read, write: if isAdmin() || isOwner(resource.data.ownerUid)
    }

    match /properties/{id} {
      allow read, write: if isAdmin() || isOwner(resource.data.agentUid)
    }

    match /deals/{id} {
      allow read, write: if isAdmin() || isOwner(resource.data.agentUid)
    }

    match /tasks/{id} {
      allow read, write: if isAdmin() || isOwner(resource.data.assignedUid)
    }

    match /conversations/{id} {
      allow read, write: if isAdmin() || isOwner(resource.data.ownerUid)
      match /messages/{msgId} {
        allow read, write: if isAdmin() || isOwner(get(/databases/$(database)/documents/conversations/$(id)).data.ownerUid)
      }
    }
  }
}
